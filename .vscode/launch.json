{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Alloca Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/test/alloc_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                // This command tells GDB to handle SIG34 (Real-Time event 34) 
                // by ignoring it (nopass), so the debugger doesn't stop.
                {
                    "description": "Ignore Real-time signal 34 (SIG34)",
                    "text": "handle SIG34 nostop noprint pass", 
                    "ignoreFailures": true
                }
            ],
        },


